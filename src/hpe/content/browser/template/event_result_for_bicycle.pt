<style>
td{
    text-align: center;
    vertical-align: middle !important;
}
th{
    vertical-align: middle !important;
}
.danger{
    background: red;
    color: white;
    border: none;
    border-radius: 10px;
}
.success{
    margin-right: 10px;
    background: green;
    color: white;
    border: none;
    border-radius: 10px;
}
</style>
<button style="float:right;margin-bottom:25px;font-size:18px" data-action='del' class="award danger" >刪除</button>
<button style="float:right;margin-bottom:25px;font-size:18px" class="award success" data-action='pass'>審核通過</button>
<table>
    <tr>
        <th style="width:50px">上傳順序</th>
        <th style="width:95px;">會員ID</th>
        <th style="width:95px;">信箱</th>
        <th style="width:95px;">中文姓名</th>
        <th style="width:100px;">手機號碼</th>
        <th style="width:100px;">上傳日期</th>
        <th style="width:100px">地點</th>
        <th style="width:95px;">額外申請</th>
        <th>圖片明稱</th>
        <th style="width:300px">圖片</th>
        <th style="width:80px" tal:condition="python: view.data[0][11] == 0"></th>
    </tr>
        <tr tal:repeat="data view/data">
            <td tal:content="repeat/data/number"></td>
            <td>${python:data[0]}</td>
            <td>${python:data[1]}</td>
            <td>${python:data[2]}</td>
            <td>${python:data[5]}</td>
            <td>${python:data[13]}</td>
            <td>${python:data[7]}</td>
            <td>
                <p tal:repeat="world python:data[8].split('/')"> ${world}</p>
            </td>
            <td>${python: data[10]}</td>
            <td>
                <img  style="height:350px;width:350px" class="lazyload"  data-src="${python: 'data:image/jpeg;base64,%s' %data[9]}">
            </td>
            <td tal:condition="python: data[11] == 0">
                <input type='checkbox' data-id="${python: data[12]}" 
                    style="width:20px;height:20px" >
            </td>
        </tr>
</table>

<script>
$(function(){
    $('.award').click(function(){
        if(confirm('確定要執行？')){
        id_list = []
        $('.preloader').show()
        url = location.href.replace('show_activity_status', 'update_bicycle_picture')
        $("input[type='checkbox']:checked").each(function(){
            id_list.push($(this).data('id'))
        })
        data = {
            'id_list': id_list,
            'action': $(this).data('action')
        }
        $.ajax({
            type: "post",
            url: url,
            data: data,
            success: function (rep) {
                if(rep == 'success'){
                    url = location.href.replace('show_activity_status', 'get_event_data')
                    $.ajax({
                        type: 'post',
                        url: url,
                        data: {'event': '樂活騎單車', 'date': 'audit'},
                        success: function(response){
                            $('.response_data').html(response)
                            $("img.lazyload").lazyload({
                                effect : "fadeIn"
                            });
                            $('.preloader').hide()
                        }
                    })
                }else{
                    alert('更新失敗')
                }
            }
        });
        }
    })
})

</script>
